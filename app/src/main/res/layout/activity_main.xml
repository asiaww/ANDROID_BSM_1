<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context="com.example.jwetesko.bsm_zad1.MainActivity">

    <TableRow
        android:layout_marginTop="100dp"
        android:layout_marginBottom="30dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_weight="0.2" />

        <TextView
            android:id="@+id/message_main"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:gravity="center_horizontal"
            android:layout_weight="0.6"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_weight="0.2" />

    </TableRow>

    <TableRow>

    <Button
        android:id="@+id/change_message_password_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.4"
        android:gravity="center"
        android:text="@string/action_change_message"
        android:layout_gravity="center_horizontal"
        android:background="@color/colorAccent"
        android:layout_margin="16dp"
        android:textStyle="bold"
        />

    <Button
        android:id="@+id/log_out_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.4"
        android:gravity="center"
        android:text="@string/action_log_out"
        android:layout_gravity="center_horizontal"
        android:background="@color/colorAccent"
        android:layout_margin="16dp"
        android:textStyle="bold"
        />

    </TableRow>
</TableLayout>
